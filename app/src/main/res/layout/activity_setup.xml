<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.zookwablog.SetupActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/default_image"
        android:id="@+id/setupImageBtn"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Finish Setup"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="17dp"
        android:id="@+id/setupSubmitBtn" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter your Display Name ...."
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/input_outline"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:drawableRight="@drawable/ic_username"
        android:id="@+id/setupNameField"
        android:layout_below="@+id/setupImageBtn"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter your Address ...."
        android:ems="10"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_recent_actors"
        android:background="@drawable/input_outline"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/address"
        android:textAlignment="center"
        android:layout_below="@+id/setupNameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Contact ...."
        android:textAlignment="center"
        android:ems="10"
        android:padding="10dp"
        android:id="@+id/contact"
        android:drawableRight="@drawable/ic_call"
        android:background="@drawable/input_outline"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
